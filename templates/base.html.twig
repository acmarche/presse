<!doctype html>
<html lang="fr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Revue de presse{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/acmarchepresse/favicon.ico') }}"/>
    {% block stylesheets %}{% endblock %}

    <link href="{{ asset('bundles/acmarchepresse/css/app.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/acmarchepresse/lightGallery/dist/css/lightgallery.min.css') }}" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.8.2/css/lightbox.min.css">

    <script src="https://kit.fontawesome.com/50e40e2735.js" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js" crossorigin="anonymous"></script>

    {% block head_scripts %}{% endblock %}
</head>
<body class="d-flex flex-column h-100">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="{{ path('homepage') }}">Revue de presse</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample07"
                aria-controls="navbarsExample07" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample07">
            <ul class="navbar-nav mr-auto">
                {% block menu_top %}

                {% endblock %}

                <li class="nav-item">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('app_logout') }}" class="nav-link" title="Se déconnecter"><i
                                    class="fas fa-sign-out-alt"></i> Se déconnecter</a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="nav-link" title="Me connecter">
                            <i class="fas fa-sign-in-alt"></i> Me connecter</a>
                    {% endif %}
                </li>
            </ul>
            {{ render(path('presse_form_search')) }}
        </div>
    </div>
</nav>

<main role="main" class="container pt-3">

    {% include '@AcMarchePresse/_flash_messages.html.twig' %}

    {% block body %}

    {% endblock %}
</main>

{% block footer %}
    {#  <footer class="footer mt-auto py-3">
          <div class="container">
              <span class="text-muted">Place sticky footer content here.</span>
          </div>
      </footer>#}
{% endblock %}

{% block javascripts %}{% endblock %}

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
<script src="{{ asset('bundles/acmarchepresse/lightGallery/dist/js/lightgallery.min.js') }}"
        crossorigin="anonymous"></script>
<!-- A jQuery plugin that adds cross-browser mouse wheel support. (Optional) -->
<script src="{{ asset('bundles/acmarchepresse/lightGallery/lib/jquery.mousewheel.min.js') }}"></script>
<!-- lightgallery plugins -->
<script src="{{ asset('bundles/acmarchepresse/lightGallery/modules/lg-fullscreen.min.js') }}"></script>
<script src="{{ asset('bundles/acmarchepresse/lightGallery/modules/lg-zoom.min.js') }}"></script>
{% block scripts %}

{% endblock %}
</body>
</html>

