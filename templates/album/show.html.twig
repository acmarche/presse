{% extends '@AcMarchePresse/layout_front.html.twig' %}

{% block title %}{{ album }}{% endblock %}

{% block body %}
    <div class="card bg-light mb-3">
        <div class="card-header">
            <h2>{{ album.niceName }}</h2>
        </div>
        <div class="card-body">
            {% include '@AcMarchePresse/album/_breadcrumb.html.twig' %}
            {% include '@AcMarchePresse/album/_actions.html.twig' %}

            {% if album.description %}
                <p class="card-text text-muted">
                    {{ album.description|nl2br }}
                </p>
            {% endif %}

            {% include '@AcMarchePresse/album/_childs.html.twig' %}
            {% include '@AcMarchePresse/album/_articles.html.twig' %}
        </div>
    </div>

    {{ include('@AcMarchePresse/album/_delete_form.html.twig') }}
{% endblock %}
{% block scripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#lightgallery").lightGallery({
                    'selector': '.card-jf'
                }
            );
        });
    </script>
{% endblock %}