{% extends '@AcMarchePresse/base.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Notifier l'album {{ album.nicename }}</h3>
        </div>

        <div class="card-body">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.text) }}
                <button class="btn btn-primary" type="submit">
                    <i class="ti ti-device-floppy"></i> Confirmer la notification
                </button>
                {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
