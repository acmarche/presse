{% extends '@AcMarchePresse/base.html.twig' %}

{% block body %}

    <div class="card mb-3">
        <div class="card-header">
            <h3>{{ article.nom }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.description) }}
            {{ form_row(form.dateArticle) }}
            {{ form_row(form.file) }}

            <button class="btn btn-primary" type="submit"><i
                        class="far fa-save"></i> Sauvegarder
            </button>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
