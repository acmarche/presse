{% extends '@AcMarchePresse/base.html.twig' %}

{% block body %}
    <div class="card mb-3">
        <div class="card-header">

            <div class="row">
                <div class="col-8">
                    <h3>Liste des albums</h3>
                </div>
                <div class="col-4">
                    <a class="float-right btn btn-primary" href="{{ path('album_new') }}">
                        <i class="fas fa-plus"></i> Ajouter</a>
                </div>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-bordered table-responsive-sm">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date</th>
                    <th>Sous albums</th>
                </tr>
                </thead>
                <tbody>
                {% for album in albums %}
                    <tr>
                        <td>
                            <a href="{{ path('album_show', {'id': album.id}) }}">{{ album.niceName }}</a>
                        </td>
                        <td>
                            {{ album.dateAlbum|date('m-Y') }}
                        </td>
                        <td>
                            {{ album.albums|length }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
